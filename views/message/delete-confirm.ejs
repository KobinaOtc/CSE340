<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<div class="formContainer">
  <div>
    <h2>Confirm Message Deletion</h2>
    <p class="notice">
      The message below will be permanently deleted and cannot be recovered.
      Are you sure you want to delete this message?
    </p>
  </div>
  
  <% if (messageData) { %>
    <form class="authForm" action="/message/delete" method="post">
      <fieldset>
        <legend>Message Information</legend>

        <label for="message_subject">Subject:</label>
        <input id="message_subject" type="text" readonly value="<%= messageData.message_subject %>" >

        <label for="sender">From:</label>
        <input id="sender" type="text" readonly value="<%= messageData.account_firstname %> <%= messageData.account_lastname %>" >

        <label for="vehicle">Vehicle:</label>
        <input id="vehicle" type="text" readonly value="<%= messageData.inv_make %> <%= messageData.inv_model %>" >
      </fieldset>

      <button type="submit" class="btn-delete">Delete Message</button>
      <input type="hidden" name="message_id" value="<%= messageData.message_id %>" >
    </form>
  <% } else { %>
    <p class="notice">Message details for deletion confirmation could not be loaded.</p>
  <% } %>
</div>